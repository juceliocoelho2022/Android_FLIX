<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090808"
    tools:context=".MainActivityPerfil">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="175dp"
        android:layout_height="96dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fonte" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Quem estÃ¡ assistindo?"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imgPerfilSocorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/perfil2" />

    <ImageView
        android:id="@+id/imgPerfilSidnei"
        android:layout_width="106dp"
        android:layout_height="123dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/perfil1" />

    <ImageView
        android:id="@+id/imgPerfilHeitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/perfil3" />

    <TextView
        android:id="@+id/textViewSidnei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Jucelio"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imgPerfilSidnei"
        app:layout_constraintStart_toStartOf="@+id/imgPerfilSidnei"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilSidnei" />

    <TextView
        android:id="@+id/textViewSocorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Socorro"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imgPerfilSocorro"
        app:layout_constraintStart_toStartOf="@+id/imgPerfilSocorro"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilSocorro" />

    <TextView
        android:id="@+id/textViewHeitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Heitor"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imgPerfilHeitor"
        app:layout_constraintStart_toStartOf="@+id/imgPerfilHeitor"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilHeitor" />

</androidx.constraintlayout.widget.ConstraintLayout>